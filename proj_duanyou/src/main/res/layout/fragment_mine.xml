<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="290dp">


            <ImageView
                android:id="@+id/bg_iv"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:scaleType="centerCrop"
                android:src="@drawable/background2x" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/headimage_iv"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/head42x"

                app:riv_corner_radius="6dp" />

            <TextView
                android:id="@+id/nickname_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/bg_iv"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/headimage_iv"
                android:text="我的窝"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/location_tv"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/nickname_tv"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/headimage_iv"
                android:drawableLeft="@drawable/near2x"
                android:gravity="center_vertical"
                android:text="火星上"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/edit_tv"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:text="编辑"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_marginTop="25dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/rectangle_edit"
                android:textColor="@color/white" />
        </RelativeLayout>

        <TextView
            android:id="@+id/login_register_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="15dp"
            android:paddingLeft="50dp"
            android:paddingTop="15dp"
            android:text="登录/注册" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:paddingBottom="5dp"
            android:visibility="gone"
            android:paddingEnd="30dp"
            android:paddingLeft="30dp"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/add2x"
                android:text="附近段友" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/friend2x"
                android:text="段友圈" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/follow2x"
                android:text="关注" />

        </RelativeLayout>

        <TextView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/collection2x"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/jiatou2x"
            android:gravity="center_vertical"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            android:text="收藏" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:visibility="gone"
            android:background="@color/white"
            android:drawableLeft="@drawable/write2x"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/jiatou2x"
            android:gravity="center_vertical"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            android:text="投稿" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:visibility="gone"
            android:background="@color/white"
            android:drawableLeft="@drawable/hudong2x"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/jiatou2x"
            android:gravity="center_vertical"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            android:text="互动" />

        <TextView
            android:id="@+id/setting_tv"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/set2x"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/jiatou2x"
            android:gravity="center_vertical"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            android:text="设置" />


    </LinearLayout>

</ScrollView>