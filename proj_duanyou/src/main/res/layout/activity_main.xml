<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <FrameLayout
        android:id="@+id/layFrame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ffbb3a" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#fff"
        android:orientation="horizontal">

        <!--首页-->
        <LinearLayout
            android:id="@+id/id_activity_dymain_lay_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/id_activity_main_img_btn_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_main_home_selected" />

            <TextView
                android:id="@+id/id_activity_main_tv_home"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_marginTop="2dp"
                android:text="首页"
                android:textColor="#4d4d4d"
                android:textSize="12sp" />
        </LinearLayout>

        <!--段友-->
        <LinearLayout
            android:id="@+id/id_activity_dymain_lay_dyou"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/id_activity_main_img_btn_dyou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_main_friend_normal" />

            <TextView
                android:id="@+id/id_activity_main_tv_dyou"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_marginTop="2dp"
                android:text="段友"
                android:textColor="#b3b3b3"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/more_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:src="@drawable/more" />

        </LinearLayout>

        <!--审核-->
        <LinearLayout
            android:id="@+id/id_activity_dymain_lay_examain"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/id_activity_main_img_btn_examain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_main_examine_normal" />

            <TextView
                android:id="@+id/id_activity_main_tv_examin"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_marginTop="2dp"
                android:text="审核"
                android:textColor="#b3b3b3"
                android:textSize="12sp" />
        </LinearLayout>

        <!--我的-->
        <LinearLayout
            android:id="@+id/id_activity_dymain_lay_mine"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/id_activity_main_img_btn_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_main_mine_normal" />

            <TextView
                android:id="@+id/id_activity_main_tv_mine"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_marginTop="2dp"
                android:text="我的"
                android:textColor="#b3b3b3"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>